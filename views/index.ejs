<% layout('layouts/boilerplate') %> 

<form action="/products?barcode=" method="get">
    <div class="mb-3">
        <label class="form-label" for="barcode">Search by barcode:</label>
        <input class="form-control col-4" type="number" id="barcode" name="barcode" required>
    </div>
    <div class="mb-3">
        <button class="btn btn-info">Search</button>
    </div>
</form>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Barcode</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        <% for( let product of products) { %>
            <tr>
                <td><%= product.barcode %></td>
                <td><%= product.name %></td>
                <td><%= product.quantity %></td>
                <td><a href="/products/<%= product._id %>">Details</a></td>
            </tr>
        <% } %>
    </tbody>
</table>

<div>
    <a href="/products/new" class="btn btn-info">Add Product</a>
</div>

