<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-3 offset-3">
            <div class="mb-3">
                <label class="form-label" for="barcode">Barcode</label>
                <h4>
                    <%= product.barcode %>
                </h4>
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <h4>
                    <%= product.name %>
                </h4>
            </div>
            <div class="mb-3">
                <label class="form-label" for="quantity">Quantity</label>
                <h4>
                    <%= product.quantity %>
                </h4>
            </div>
            <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
                <button class="btn btn-warning">Delete</button>
            </form>
        </div>
        <div class="col-3">
            <form action="/products/<%= product._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="quantity">Change product quantity</label>
                    <input class="form-control col-4" type="number" id="quantity" name="product[quantity]" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Change quantity</button>
                </div>
            </form>
        </div>
    </div>